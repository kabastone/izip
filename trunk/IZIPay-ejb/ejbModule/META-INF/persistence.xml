<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="IZIPay-ejb">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/izipayDS</jta-data-source>
		<class>sn.techabiz.izipay.ejb.pays.entites.Pays</class>
		<class>sn.techabiz.izipay.ejb.pays.entites.Piece</class>
		<class>sn.techabiz.izipay.ejb.structures.entities.Structure</class>
		<class>sn.techabiz.izipay.ejb.structures.entities.TypeStructure</class>
		<class>sn.techabiz.izipay.ejb.utilisateurs.entites.Droit</class>
		<class>sn.techabiz.izipay.ejb.utilisateurs.entites.Groupe</class>
		<class>sn.techabiz.izipay.ejb.utilisateurs.entites.Personne</class>
		<class>sn.techabiz.izipay.ejb.utilisateurs.entites.Utilisateur</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
